@model List<Category>

<div class="container mb-5">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<H2>Category List</H2>
			@if (TempData["success"] != null)
			{
				<H3>@TempData["success"]</H3>
			}
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-dark" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i> Create New Category</a>
		</div>

	</div>

	<table class="table table-bordered table-striped">
		<tr>
			<th>Category Name</th>
			<th>Section Name</th>
			<th>Actions</th>

		</tr>

		@foreach(var cat in Model.OrderBy(u => u.Name))
		{
			<tr>
				<td>@cat.Name</td>
				<td>@cat.SectionName</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>	
		}

	</table>

</div>