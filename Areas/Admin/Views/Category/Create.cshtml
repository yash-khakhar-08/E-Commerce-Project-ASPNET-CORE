@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2>Create New Category</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="SectionName"></label>
			<input asp-for="SectionName" type="text" class="form-control"  />
			<span asp-validation-for="SectionName" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Create</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Go Back</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}